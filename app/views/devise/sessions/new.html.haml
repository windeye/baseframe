= content_for :page_title do
  = "登录|Koala"
#login
  .container-fluid
    .row-fluid
      .row-fluid
        .span12.center.login-header
          %h3#welcome
            欢迎加入Koala

      .row-fluid
        .well.span4.center.login-box
          .alert.alert-info 
            请使用用户名登录
          = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
            %fieldset
              %label{:for => "username"}
              = f.text_field :username, :placeholder => "Username", :class =>"input-large span8", :required => true
              .clearfix

              %label{:for=> "password"}
              = f.password_field :password, :placeholder => "Password", :class =>"input-large span8", :required => true, :pattern => "......+" 
              = f.hidden_field :remember_me, :value => 1
              .clearfix

              .center.span8
                = f.submit "登录", :class => "btn btn-primary" 
          = link_to "忘记密码？", new_password_path(resource_name), :id => "forgot_password_link"
